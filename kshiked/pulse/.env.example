# KShield Pulse Environment Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=sqlite+aiosqlite:///pulse.db
# For production PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost/pulse

# =============================================================================
# Gemini LLM (Required for threat classification)
# =============================================================================
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TEMPERATURE=0.3

# =============================================================================
# Reddit (from reddit.com/prefs/apps - create "script" app)
# =============================================================================
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=KShieldPulse/1.0

# =============================================================================
# Telegram (from my.telegram.org)
# =============================================================================
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE=

# =============================================================================
# X/Twitter (bearer token for API v2)
# =============================================================================
X_BEARER_TOKEN=

# =============================================================================
# Instagram (optional - for authenticated scraping)
# =============================================================================
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

# =============================================================================
# Facebook (optional - for authenticated scraping)
# =============================================================================
FACEBOOK_EMAIL=
FACEBOOK_PASSWORD=

# =============================================================================
# Scraping Settings
# =============================================================================
SCRAPE_INTERVAL_MINUTES=30
ECOMMERCE_INTERVAL_HOURS=6
MAX_POSTS_PER_SCRAPE=100
MAX_PRODUCTS_PER_CATEGORY=50

# =============================================================================
# Pulse Engine Settings
# =============================================================================
PULSE_USE_NLP=true
PULSE_MIN_INTENSITY=0.1
PULSE_MIN_CONFIDENCE=0.3
PULSE_SHOCK_INTERVAL=300
PULSE_PROBABILISTIC=true
